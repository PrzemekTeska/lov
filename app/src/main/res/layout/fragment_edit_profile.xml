<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_profile_edit_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/user_profile_image_edit_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/user_profile_image_edit_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Edit profile pic"
        android:background="#4AD285"
        android:layout_above="@+id/user_email_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/user_email_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="New email address"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/apply_edit_button"
        android:layout_above="@+id/user_password_edit"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/user_password_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="New Password"
        android:textSize="18sp"
        android:layout_above="@+id/apply_edit_button"
        android:layout_alignLeft="@+id/apply_edit_button"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/apply_edit_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#4AD285"
        android:text="APPLY"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>