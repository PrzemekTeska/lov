<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/progress_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/apply_edit_progress_button"
        android:text="NAME:"
        android:textSize="20dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/progress_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="current name"
        android:layout_toRightOf="@+id/progress_name_text_view"
        android:layout_alignBottom="@+id/progress_name_text_view"
        android:layout_marginLeft="20dp"/>


    <Button
        android:id="@+id/apply_edit_progress_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="APPLY"
        android:textSize="15dp"
        android:background="#4AD285"
        android:layout_above="@+id/disable_progress_button"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/disable_progress_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="DISABLE"
        android:textSize="15dp"
        android:background="#4AD285"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>