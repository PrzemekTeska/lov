<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Description:"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/check_goal_name"
        android:layout_alignBottom="@+id/check_goal_name"/>

    <TextView
        android:id="@+id/check_goal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="GOALNAME"
        android:textSize="18sp"
        android:layout_above="@id/check_goal_start_date"
        android:layout_marginBottom="30dp"/>


    <TextView
        android:id="@+id/start_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Start Date:"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/check_goal_start_date"
        android:layout_alignBottom="@+id/check_goal_start_date"/>

    <TextView
        android:id="@+id/check_goal_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Start Date"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/check_goal_end_date"
        android:layout_marginBottom="30dp"/>


    <TextView
        android:id="@+id/end_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="End Date:"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/check_goal_end_date"
        android:layout_alignBottom="@+id/check_goal_end_date"/>

    <TextView
    android:id="@+id/check_goal_end_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:text="End Date"
    android:layout_centerHorizontal="true"
        android:layout_above="@+id/check_days_remaining"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/days_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Days Remaining:"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/check_days_remaining"
        android:layout_alignBottom="@+id/check_days_remaining"/>

    <TextView
        android:id="@+id/check_days_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_above="@+id/edit_goal_button"
        android:layout_centerHorizontal="true"
        android:text="8"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/edit_goal_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="EDIT GOAL"
        android:background="#4AD285"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"/>

</RelativeLayout>