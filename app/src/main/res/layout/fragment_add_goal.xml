<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE NEW GOAL"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/goal_name"
        android:layout_marginBottom="60dp"/>

    <EditText
        android:id="@+id/goal_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_above="@id/start_date_text"
        android:layout_alignLeft="@id/start_date_text"
        android:layout_marginBottom="80dp"/>

    <TextView
        android:id="@+id/start_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose start date:"
        android:layout_above="@+id/end_date_text"
        android:layout_marginBottom="60dp"
        android:layout_alignRight="@id/end_date_text"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/start_date_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_date_range_black_24dp"
        android:layout_toRightOf="@+id/start_date_text"
        android:layout_alignBottom="@+id/start_date_text"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/start_date_view"
        android:layout_width="80dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/start_date_button"
        android:layout_alignBottom="@id/start_date_text"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/end_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose end date:"
        android:layout_above="@+id/add_goal_button"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/end_date_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_date_range_black_24dp"
        android:layout_toRightOf="@+id/end_date_text"
        android:layout_alignBottom="@+id/end_date_text"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/end_date_view"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_toRightOf="@id/end_date_button"
        android:layout_alignBottom="@id/end_date_text"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:background="@android:color/white"/>

    <Button
        android:id="@+id/add_goal_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textSize="15dp"
        android:background="#4AD285"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>